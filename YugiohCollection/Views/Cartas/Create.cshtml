@model YugiohCollection.Models.Carta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Carta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Duelista" class="control-label"></label>
                <select asp-for="DuelistaID" class="form-control" asp-items="ViewBag.DuelistaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="@Html.GetEnumSelectList<TipoCarta>()">
                    <option>--Selecione o tipo da carta--</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Efeito" class="control-label"></label>
                <input asp-for="Efeito" class="form-control" />
                <span asp-validation-for="Efeito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label">Foto da Carta</label>

                <div class=" custom-file">
                    <input type="file" class="custom-file-input" id="Imagem" asp-for="Imagem" />
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="Imagem"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>

                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $("#Imagem").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });

    $("#Imagem").attr("data-val", "true");
    $("#Imagem").attr("data-val-required", "Preencha o campo Imagem");
</script>
}
