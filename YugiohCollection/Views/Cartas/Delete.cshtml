@model YugiohCollection.Models.Carta

@{
    ViewData["Title"] = "Apagar Carta";
}

<h1>Apagar Carta</h1>

<h3>Tem certeza?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Efeito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Efeito)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duelista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duelista.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            <img src="~/imagens/@Model.Imagem" style="width: 200px; height: 300px" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Voltar</a>
    </form>
</div>
