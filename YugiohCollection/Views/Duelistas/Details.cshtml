@model YugiohCollection.Models.Duelista

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Duelista</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
                <img src="~/imagens/@Model.Imagem" style="width: 200px; height: 300px" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Editar</a>
    <a class="btn btn-dark" asp-action="Index">Voltar</a>
</div>
